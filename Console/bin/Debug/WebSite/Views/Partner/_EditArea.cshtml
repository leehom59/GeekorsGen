@model JamZooMng.Models.PartnerModel
    <div class="editArea">
        <h2>
			<span class="notes">標有「<img src="@Url.Content("~/images/icon/bullet-red-star.gif")">」為必填項目：</span></h2>
             @Html.ValidationSummary(true, "新增失敗")
        <table border="0" cellpadding="0" cellspacing="0" class="tableStyle01">
            <tbody>
                				<tr>
					<td width="90" class="star1">
						編號
					</td>
					<td>
						自動產生
						@Html.HiddenFor(p => p.Id)
					</td>
				</tr>

				<tr>
					<td width="90" class="star1">
						廠商名稱
					</td>
					<td>
						@Html.TextBoxFor(p => p.Cname, new { @class = "txt1", size = "30"})
						@Html.ValidationMessageFor(p => p.Cname)
					</td>
				</tr>

				<tr>
					<td width="90" class="star1">
						連結
					</td>
					<td>
						@Html.TextBoxFor(p => p.Link, new { @class = "txt1", size = "30"})
						@Html.ValidationMessageFor(p => p.Link)
					</td>
				</tr>

				<tr>
					<td width="90" class="star1">
						電話
					</td>
					<td>
						@Html.TextBoxFor(p => p.Phone, new { @class = "txt1", size = "30"})
						@Html.ValidationMessageFor(p => p.Phone)
					</td>
				</tr>

				<tr>
					<td width="90" class="star1">
						區碼
					</td>
					<td>
						@Html.TextBoxFor(p => p.Areaid, new { @class = "txt1", size = "30"})
						@Html.ValidationMessageFor(p => p.Areaid)
					</td>
				</tr>

				<tr>
					<td width="90" class="star1">
						地址
					</td>
					<td>
						@Html.TextBoxFor(p => p.Address, new { @class = "txt1", size = "30"})
						@Html.ValidationMessageFor(p => p.Address)
					</td>
				</tr>

				<tr>
					<td width="90" class="star1">
						經度
					</td>
					<td>
						@Html.TextBoxFor(p => p.Gmap_Lng, new { @class = "txt1", size = "30"})
						@Html.ValidationMessageFor(p => p.Gmap_Lng)
					</td>
				</tr>

				<tr>
					<td width="90" class="star1">
						緯度
					</td>
					<td>
						@Html.TextBoxFor(p => p.Gmap_Lat, new { @class = "txt1", size = "30"})
						@Html.ValidationMessageFor(p => p.Gmap_Lat)
					</td>
				</tr>

				<tr>
					<td width="90" class="star1">
						優惠憑證標題
					</td>
					<td>
						@Html.TextBoxFor(p => p.Discount_Title, new { @class = "txt1", size = "30"})
						@Html.ValidationMessageFor(p => p.Discount_Title)
					</td>
				</tr>

				<tr>
					<td width="90" class="star1">
						優惠憑證圖
					</td>
					<td>
						@Html.TextBoxFor(p => p.Discount_Image, new { @class = "txt1", size = "30"})
						@Html.ValidationMessageFor(p => p.Discount_Image)
					</td>
				</tr>

				<tr>
					<td width="90" class="star1">
						優惠憑證描述
					</td>
					<td>
						@Html.TextAreaFor(p => p.Discount_Desc, new { @class = "txt1", style="height:280px"})
					</td>
				</tr>

				<tr>
					<td width="90" class="star1">
						分店地址
					</td>
					<td>
						@Html.TextBoxFor(p => p.Location_Address, new { @class = "txt1", size = "30"})
						@Html.ValidationMessageFor(p => p.Location_Address)
					</td>
				</tr>

				<tr>
					<td width="90" class="star1">
						分店經度
					</td>
					<td>
						@Html.TextBoxFor(p => p.Location_Gmap_Lng, new { @class = "txt1", size = "30"})
						@Html.ValidationMessageFor(p => p.Location_Gmap_Lng)
					</td>
				</tr>

				<tr>
					<td width="90" class="star1">
						分店緯度
					</td>
					<td>
						@Html.TextBoxFor(p => p.Location_Gmap_Lat, new { @class = "txt1", size = "30"})
						@Html.ValidationMessageFor(p => p.Location_Gmap_Lat)
					</td>
				</tr>

				<tr>
					<td width="90" class="star1">
						排序(由大到小)
					</td>
					<td>
						@Html.TextBoxFor(p => p.Orders, new { @class = "txt1", size = "30"})
						@Html.ValidationMessageFor(p => p.Orders)
					</td>
				</tr>

				<tr>
					<td width="90" class="star1">
						建立日期
					</td>
					<td>
						@Html.Label(Model.Create_Date.ToString("yyyy-MM-dd"))
					</td>
				</tr>

				<tr>
					<td width="90" class="star1">
						上線日期
					</td>
					<td>
						@Html.TextBoxFor(p => p.S_Date, new { @class = "txt1", size = "30"})
						@Html.ValidationMessageFor(p => p.S_Date)
					</td>
				</tr>

				<tr>
					<td width="90" class="star1">
						下線日期
					</td>
					<td>
						@Html.TextBoxFor(p => p.E_Date, new { @class = "txt1", size = "30"})
						@Html.ValidationMessageFor(p => p.E_Date)
					</td>
				</tr>

				<tr>
					<td width="90" class="star1">
						是否上線
					</td>
					<td>
						@Html.RadioButtonFor(p => p.Online, "True") 是&nbsp;
						@Html.RadioButtonFor(p => p.Online, "False") 否&nbsp;
					</td>
				</tr>


            </tbody>
        </table>
    </div>

	@{
		string _Controller = Request.RequestContext.RouteData.Values["controller"].ToString();
	}

    <div class="BTNcenter">
        <input type="submit" class="btn" id="btn_submit" name="btn_submit" value="儲存送出" onclick="javascript:return confirm('確定儲存送出嗎?');">
        <input type="button" class="btn" id="btn_cancle" name="btn_cancle" value="取消變更" onclick="javascript:if (confirm('確定取消變更嗎?')){window.location.href='@Url.Content("~/" + _Controller + "/List")';}">
    </div>